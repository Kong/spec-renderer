{
  "name": "@kong/spec-renderer",
  "version": "1.94.31",
  "description": "Kong's open-source spec renderer",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/kong-spec-renderer.cjs",
  "module": "./dist/kong-spec-renderer.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/types/index.d.ts",
  "typings": "dist/types",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/kong-spec-renderer.es.js",
      "require": "./dist/kong-spec-renderer.cjs"
    },
    "./web-component": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/kong-spec-renderer.web-component.es.js",
      "require": "./dist/kong-spec-renderer.web-component.cjs"
    },
    "./dist/style.css": "./dist/spec-renderer.css",
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "cross-env USE_SANDBOX=true vite",
    "build": "pnpm run typecheck && pnpm run build:package && pnpm run build:webcomponent && pnpm run build:types && pnpm run build:aliases",
    "build:package": "vite build -m production",
    "build:webcomponent": "cross-env AS_WEB_COMPONENT='true' vite build -m production",
    "build:types": "vue-tsc -p './tsconfig.build.json' --emitDeclarationOnly",
    "build:aliases": "tsc-alias -p './tsconfig.build.json'",
    "build:analyzer": "BUILD_VISUALIZER='true' vite build -m production",
    "build:sandbox": "cross-env USE_SANDBOX=true vite build -m production",
    "preview": "pnpm run build:sandbox && cross-env USE_SANDBOX=true vite preview",
    "typecheck": "vue-tsc -p './tsconfig.build.json' --noEmit",
    "stylelint": "stylelint --allow-empty-input './src/**/*.{css,scss,vue}'",
    "stylelint:fix": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,vue}' --fix",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "cross-env FORCE_COLOR=1 vitest run",
    "test:open": "cross-env FORCE_COLOR=1 vitest --ui",
    "semantic-release": "semantic-release",
    "commit": "cz"
  },
  "peerDependencies": {
    "vue": ">= 3.3.13 < 4"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^13.0.4",
    "@asyncapi/openapi-schema-parser": "^3.0.24",
    "@asyncapi/parser": "^3.4.0",
    "@floating-ui/vue": "^1.1.6",
    "@kong/icons": "^1.31.0",
    "@stoplight/http-spec": "^7.1.0",
    "@stoplight/json": "^3.21.7",
    "@stoplight/types": "^14.1.1",
    "@stoplight/yaml": "^4.3.0",
    "@vueuse/core": "^13.3.0",
    "allof-merge": "^0.6.6",
    "flatted": "^3.3.3",
    "form-urlencoded": "^6.1.5",
    "httpsnippet": "^3.0.9",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.17.0",
    "shiki": "^3.6.0"
  },
  "resolutions": {
    "openapi3-ts": "4.4.0"
  },
  "devDependencies": {
    "@babel/types": "^7.27.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@evilmartians/lefthook": "^1.11.13",
    "@kong/design-tokens": "^1.17.4",
    "@kong/eslint-config-kong-ui": "1.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "@types/jsdom": "^21.1.7",
    "@types/json-schema": "^7.0.15",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.31",
    "@types/sanitize-html": "^2.16.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.28.0",
    "jsdom": "^26.1.0",
    "openapi3-ts": "4.4.0",
    "postcss": "^8.5.4",
    "postcss-html": "^1.8.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.89.2",
    "sass-embedded": "^1.89.2",
    "semantic-release": "^24.2.5",
    "stylelint": "^16.20.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-order": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-replace": "^0.1.1",
    "vite-plugin-vue-devtools": "^7.7.6",
    "vitest": "3.2.3",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@evilmartians/lefthook",
      "@parcel/watcher",
      "esbuild",
      "vue-demi"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kong/spec-renderer.git"
  },
  "homepage": "https://github.com/Kong/spec-renderer",
  "bugs": {
    "url": "https://github.com/Kong/spec-renderer/issues"
  },
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "volta": {
    "node": "22.16.0",
    "pnpm": "10.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  }
}
